page {
  color: #333;
}
.devices_summary {
  margin-top: 30px;
  padding: 10px;
  font-size: 16px;
}
.device_list {
  height: 300px;
  margin: 10px;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 5px;
}
.device_item {
  padding: 10px;
  margin: 5px 0;
  background-color: #f8f8f8;
  border-radius: 5px;
  border: 1px solid #ddd;
}
.device_item_hover {
  background-color: #e0e0e0;
}
.connected_info {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}
.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}
.container {
  padding: 20px;
}

.device-info {
  margin: 20px 0;
}

.device-info text {
  display: block;
  margin: 5px 0;
}

.control-panel {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.control-panel button {
  width: 40%;
}

.sensor-panel {
  margin-top: 30px;
  padding: 15px;
  background-color: #f8f8f8;
  border-radius: 5px;
  text-align: center;
}

.sensor-label {
  font-size: 16px;
  color: #666;
}

.sensor-value {
  font-size: 24px;
  color: #333;
  margin-left: 10px;
  font-weight: bold;
}

.text-display-panel {
  margin-top: 30px;
  padding: 15px;
  background-color: #f8f8f8;
  border-radius: 5px;
}

.text-input {
  width: 100%;
  height: 40px;
  margin-bottom: 10px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.send-button {
  width: 100%;
  background-color: #4CAF50;
  color: white;
}

.send-button:active {
  background-color: #45a049;
}